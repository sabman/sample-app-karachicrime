source 'https://rubygems.org'

gem 'rails', '3.2.0'

gem 'sqlite3'
gem 'haml'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'bcrypt-ruby'

group :development do
  gem 'haml-rails'

  # == RSpec ==
  gem 'rspec'
  gem 'rspec-rails'
  gem 'guard-rspec'

  # == Cucumber ==
  gem 'cucumber'
  gem 'cucumber-rails'
  gem 'guard-cucumber'

  gem 'guard-spork'
  gem 'growl'
  gem 'annotate'
end

group :test do
  gem 'factory_girl_rails'
  gem 'database_cleaner'
  gem 'rb-fsevent', :require => false
  gem 'spork', '~> 0.9.0.rc'
  gem 'capybara'
end
